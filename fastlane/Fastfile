# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:mac)

platform :mac do
  desc "Build the app"
  lane :build do
    xcodebuild(
      project: "tray-lang.xcodeproj",
      scheme: "tray-lang",
      configuration: "Release",
      clean: true
    )
  end

  desc "Build universal binary"
  lane :build_universal do
    # Build for Intel
    xcodebuild(
      project: "tray-lang.xcodeproj",
      scheme: "tray-lang",
      configuration: "Release",
      destination: "platform=macOS,arch=x86_64",
      clean: true
    )
    
    # Build for Apple Silicon
    xcodebuild(
      project: "tray-lang.xcodeproj",
      scheme: "tray-lang",
      configuration: "Release",
      destination: "platform=macOS,arch=arm64",
      clean: true
    )
    
    # Create universal binary
    sh("scripts/build-universal.sh")
  end

  desc "Create DMG"
  lane :create_dmg do
    create_dmg(
      app: "build/Release/tray-lang-universal.app",
      dmg: "build/Release/Tray-Lang-Universal.dmg",
      volname: "Tray Lang",
      window_pos: "200,120",
      window_size: "600,300",
      icon_size: "100",
      icon: "build/Release/tray-lang-universal.app",
      hide_extension: "tray-lang-universal.app",
      app_drop_link: "425,120"
    )
  end

  desc "Run tests"
  lane :test do
    xcodebuild(
      project: "tray-lang.xcodeproj",
      scheme: "tray-lang",
      destination: "platform=macOS",
      test: true
    )
  end

  desc "Deploy to GitHub Releases"
  lane :deploy do
    build_universal
    create_dmg
    
    # Create GitHub release
    set_github_release(
      repository_name: "s00d/tray-lang",
      api_token: ENV["GITHUB_TOKEN"],
      name: "v#{lane_context[SharedValues::VERSION_NUMBER]}",
      tag_name: "v#{lane_context[SharedValues::VERSION_NUMBER]}",
      description: "Release v#{lane_context[SharedValues::VERSION_NUMBER]}",
      files: [
        "build/Release/tray-lang-universal.app",
        "build/Release/Tray-Lang-Universal.dmg"
      ],
      draft: false,
      prerelease: false
    )
  end

  desc "Bump version"
  lane :bump_version do
    increment_version_number(
      version_number: "1.0.0"
    )
  end

  desc "Complete release process"
  lane :release do
    bump_version
    test
    deploy
  end
end 